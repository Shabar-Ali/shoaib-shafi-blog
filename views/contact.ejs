<%- include("partials/header") %>

    <div class="page-header">
        <div class="page-header-content">
            <h1 class="page-header-title">contact</h1>
        </div>
        <div class="page-header-image" style="background-image: url(/imgs/contact.jpg);"></div>
    </div>


    
    <div class="container" >
        <div class="container">
            <div class="row justify-content-center"  >
                <div class="col-md-8 p-3 mb-5 bg-white rounded" style="margin-top: 25px;">
                    <div class="card">
                        <div class="card-header"><i class="fas fa-envelope-open-text" style="color:#272B2F;margin-right:10px;font-size: 1.5rem;"></i><span class="contact-form-title">Drop a message to us</span></div>
                            <div class="card-body">

                                <form class="form-horizontal" action="/contact" method="POST">

                                    <div class="form-group">
                                        <label for="name1" class="cols-sm-2 control-label">E-Mail</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                <span class="input-group-addon"></span>
                                                <input type="text" class="form-control" name="email" id="name1" placeholder="Enter your E-Mail" required/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="name2" class="cols-sm-2 control-label">Name</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                <span class="input-group-addon"></span>
                                                <input type="text" class="form-control" name="name"  id="name2" placeholder="Enter your Name" required/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="name3" class="cols-sm-2 control-label">Message</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                <span class="input-group-addon"></span>
                                                <textarea class="form-control" id="name3" name="message" cols="30" rows="5" placeholder="Your Message Here"></textarea>
                                                
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group ">
                                        
                                        <button type="submit" class="btn btn-outline-success btn-lg btn-block login-button form-button">Send</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        


<%- include("partials/footer") %>
